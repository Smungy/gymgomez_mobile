<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a GymGómez"
        android:textSize="36sp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />


    <!-- Botón Miembros -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMiembro"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/purple_500"
        android:iconTint="@android:color/white"
        android:text="Miembro"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_person_code_foreground"
        app:iconSize="30dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />


    <!-- Botón Membresía -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMembresia"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/purple_500"
        android:iconTint="@android:color/white"
        android:text="Membresía"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_member_code_foreground"
        app:iconSize="30dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMiembro" />

    <!-- Botón QR -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnQr"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/purple_500"
        android:iconTint="@android:color/white"
        android:text="QR"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:icon="@drawable/icon_qr2"
        app:iconPadding="8dp"
        app:iconSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMembresia" />

    <!-- Botón Cerrar Sesión -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/red_500"
        android:text="Cerrar Sesión"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_logout_foreground"
        app:iconPadding="8dp"
        app:iconSize="30dp"
        app:iconTint="@color/ic_qr_code_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnQr" />

</androidx.constraintlayout.widget.ConstraintLayout>
